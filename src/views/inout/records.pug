doctype html
html(lang='ja')
    head
        meta(charset='utf-8')
        title Attendance System
        link(rel='stylesheet' href='assets/css/sanitize.css' type='text/css')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
        script(type='text/javascript' src='assets/scripts/main.js')
        link(rel='stylesheet' href='assets/css/style.css' type='text/css')

    body
        h1 Hayakawa-lab attendancs system
        button(onclick="location.href='http://localhost:8080/'") 戻る
        .center
            table.table.table-striped
                thead
                    tr
                        - var elements = ['氏名', '日付', '状態']
                        each item in elements
                            th #{item}

                tbody
                    each person in record
                        tr
                            th #{person.name}
                            th #{person.time}
                            th #{person.state}