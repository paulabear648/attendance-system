doctype html
html
    head
        meta(charset = "utf-8")
        title Attendance System
        link(href='./public/assets/sanitize.css' rel='stylesheet' type='text/css') 
        link(href='./public/assets/style.css' rel='stylesheet' type='text/css')
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
        link(href='https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;700&display=swap' rel='stylesheet')    
    body
        section.section
            h1 Hayakawa-lab Attendance System
            div
                ol 
                    li 名前を入力
                    li 入室または退室を押して送信
            form(method="POST" action="/list")
                input#name(type = "text" name="context" required)
                button#attend(type = "submit" name="entry") 入室
                button#leave(type = "submit" name="exit") 退室
        each person in list
            p #{person.name} #{person.state}
