doctype html
html(lang='ja')
    head
        meta(charset='utf-8')
        title Attendance System
        link(rel='stylesheet' href='assets/css/sanitize.css' type='text/css')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
        script(type='text/javascript' src='assets/scripts/main.js')
        link(rel='stylesheet' href='assets/css/style.css' type='text/css')


    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-purple
            .container-fluid
                a.navbar-brand Hayakawa-lab Attendance System
                button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
                    span.navbar-toggler-icon
                .collapse.navbar-collapse#navbarNav
                    ul.navbar-nav
                        li.nav-item
                            a.nav-link.active(aria-current="page" href="/inout") Home
                        li.nav-item
                            a.nav-link(href="/members/register") メンバーを登録
                        li.nav-item
                            a.nav-link(href="/inout/records") ログを見る
        div.text-center.py-4
            form(method="POST" action="/inout/records")
                div.mb-3.d-inline-flex.flex-column
                    input.h3#name(type="text" name="context" value="" placeholder="名前" required)
                    input.h3#password(type="password" name="password" value="" maxlength="4" placeholder="パスワード" required)
                    .position-relative
                        div.py-2.position-absolute.text-center.success-message #{success}
                        div.py-2.position-absolute.text-center.error-message #{error}
                    #alert.mt-5
                        button.mx-3#attend.btn.btn-outline-info(type="submit" name="state" value="入室" tabindex="0" accesskey="i")
                            img(src="https://img.icons8.com/ios-glyphs/344/login-rounded-right--v1.png") 
                            a 入室
                        button.mx-3#leave.btn.btn-outline-success(type="submit" name="state" value="退室" tabindex="0" accesskey="o")
                            img(src="https://img.icons8.com/ios-glyphs/344/logout-rounded--v1.png") 
                            a 退室
                
        .text-center
            li.py-2(style="list-style: none") 1.名前とパスワード(4桁)を入力
            li.py-2(style="list-style: none") 2.入室または退室を押して送信
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
        